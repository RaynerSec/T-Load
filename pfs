source "$HOME/T-Load/host"
source "$HOME/.msf_default/psf"
setdefault () {
echo "Enter Your Code as seen in website"
read -p ">|" ic
echo "Enter Your UserID"
read -p ">|" iud
echo "c=\"$ic\"" >> $HOME/.msf_default/psf
echo "ud=$(echo \"$iud\")" >> $HOME/.msf_default/psf
}
proceed () {
echo "Enter the localport to be forwarded"
read -p ">|" lp
echo "Enter the remoteport as seen in the website"
read -p ">|" rp
ssh -L $lp:localhost:$rp pfs@$host -i $HOME/T-Load/pfskey -t " d=\"$c\" && sudo pfs.sh $ud $d $rp "
}
if [ -z "$c" ] || [ -z "$ud" ]
then
setdefault
proceed
fi
echo "Your default code is $c and userid is $ud. Continue (Y) with the same or edit it (E) ?"
read -p ">|" ct
if [ $ct = "Y" ] || [ $ct = "y" ]
then
proceed
else
setdefault
proceed
fi

